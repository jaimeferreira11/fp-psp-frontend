<div class="list-common-content">
  <div id="top" class="search-container">
    <div class="row">
      <div class="col-md-12">
        <form class="form-inline">
          <div class="form-group">
            <label>Country:</label>
            <select class="form-control" id="country">
              <option selected disabled>Choose</option>
            </select>
          </div>
          <div class="form-group">
            <label class=" control-label">City: </label>
            <select class="form-control m-b" id="city">
              <option selected disabled>Choose</option>
            </select>
          </div>
          <div class="form-group">
              <label>Organization:</label>
              <select class="form-control" id="organization">
                  <option selected disabled>Choose</option>
              </select>
          </div>
          <div class="form-group">
              <label>Last Name/Code:</label>
              <input name="data[search]" class="form-control" id="search" type="text" placeholder="Last name or code">
          </div>
          <div class="form-group">
            <button type="button" id="submit" class="btn btn"><i class="fa fa-search"></i> Search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div id="family-list" class="has-spinner">
  </div>
</div>
