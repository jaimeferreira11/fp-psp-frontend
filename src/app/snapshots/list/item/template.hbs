<!--div class="text-xs-right pull-right"     style="text-align: right;"-->

  <div class="pull-right">

    <button class="btn btn-primary" id="finish-snapshot" > Finish this survey
    </button>

  </div>
  <button class="btn btn-secondary" id="print" value="{{ header.data.snapshot_indicator_id }}" > Print</button>

  <!--/div-->
<li class="list-group-item" id="{{ header.data.snapshot_indicator_id }}">

  <div class="text-center">
    <h2 class="title-gray">Family {{ header.data.family.person.lastName }}</h2>
  </div>

  <hr/>

  <div class="header-indicators-snapshot">
    <h3 class="pull-left"> SNAPSHOT {{ header.date }} </h3>
    <div class="pull-right header-resume">
      <p>{{ header.data.count_red_indicators}}</p>
      <div class="circle-header red " />
      <p>{{ header.data.count_yellow_indicators}}</p>
      <div class="circle-header yellow " />
      <p>{{ header.data.count_green_indicators}}</p>
      <div class="circle-header green " />

    </div>

  </div>
  <br/>
  <hr/>
  <div class="row indicator-list">
    {{#each data}}
    <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 indicator-circle-snapshot">
      <div id="circle" class="circle-content {{ this.classNames }} {{this.priority}}" data-toggle="tooltip" title="Set priority for this indicator" />
      <p id="indicator-name">{{ this.name }}</p>
      <p hidden id="indicator-value">{{ this.value }}</p>
    </div>
    {{/each}}
  </div>

  <h3 class="{{this.tablePriorityClassNames}}" style="font-weight: bold" >My Priorities </h3>
  <table class="table table-hover margin bottom center {{this.tablePriorityClassNames}}" id="prioritiesTable">
    <thead class="thead-light">
      <tr>
        <th class="col-md-3">Indicator</th>
        <th class="col-md-3">Why I don't have it?</th>
        <th class="col-md-3">What do I do to attain it?</th>
        <th class="col-md-3">When will I have it?</th>
      </tr>
    </thead>
    <tbody id="tbodypriorities">
      {{#each priorities}}
        {{^if this.is_success}}
          <tr>
            <td> {{this.indicator}}</td>
            <td> {{this.reason}}</td>
            <td> {{this.action}}</td>
            <td> {{this.estimated_date}}</td>
            <td style="text-align: center;"> <a id="delete"  class="btn btn-danger right noPrint" data-id="{{ this.snapshot_indicator_priority_id }}"
              data-toggle="tooltip" title="Remove this priority">
              <span class="glyphicon glyphicon-trash pull-right"></span>
            </a> </td>
          </tr>
        {{/if}}
      {{/each}}

    </tbody>
  </table>

  <h3 class="{{this.tableAchievedClassNames}}" style="font-weight: bold" >My Indicators Achieved </h3>
  <table class="table table-hover margin bottom center {{this.tableAchievedClassNames}}" id="achievedTable">
    <thead class="thead-light">
      <tr>
        <th class="col-md-6">Indicator</th>
        <th class="col-md-6"> Comments</th>
      </tr>
    </thead>
    <tbody id="tbodypriorities">
      {{#each priorities}}
        {{#if this.is_success}}
          <tr>
            <td> {{this.indicator}}</td>
            <td> {{this.reason}}</td>
            <td style="text-align: center;"> <a id="delete"  class="btn btn-danger right noPrint" data-id="{{ this.snapshot_indicator_priority_id }}"
              data-toggle="tooltip" title="Remove this priority">
              <span class="glyphicon glyphicon-trash pull-right"></span>
            </a> </td>
          </tr>
        {{/if}}
      {{/each}}

    </tbody>
  </table>


</li>
<label class="checkbox-inline no-save pull-right"><input type="checkbox" value="" id="check-privacity">I'd prefer not to share my family's situation   </label>

